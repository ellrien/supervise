<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relatitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:background="@mipmap/bg_tit">

        <TextView
            android:id="@+id/tv_title_warehouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="盘库上传"
            android:textColor="@color/white"
            android:textSize="@dimen/_center_titleSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_back_upload"
            android:text="上传列表"
            android:textColor="#fff"
            android:textSize="@dimen/_left_tvSize" />

        <ImageView
            android:id="@+id/img_back_upload"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/info_ico_back_new" />
        <LinearLayout
            android:id="@+id/ln_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="搜索"
                android:visibility="visible"
                android:textColor="@color/white"
                android:textSize="@dimen/_left_tvSize" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/info_ico_refresh" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_border_item"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="#2D4650"
            android:textSize="18sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/pk_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="3"
        android:background="@color/white"
        android:divider="@null"></ListView>

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/shape_saomiao"
        android:gravity="center"
        android:text="全部上传"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        />

</LinearLayout>
