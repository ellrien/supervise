<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:background="@drawable/shape_border_item"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/item_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="8dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="金融仓库:"
                        android:textColor="#2D4650"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_item_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3dp"
                        android:gravity="center"
                        android:text="中国二十冶建设有限"
                        android:textColor="#2D4650"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/view_style"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_margin="3dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="盘库单号:"
                    android:textColor="#2D4650"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_item_businessBillId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="PK20150112"
                    android:textColor="#2D4650"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tttttt"
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:background="@color/customer_blue"
                    android:gravity="center"
                    android:text="已盘"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <View
                style="@style/view_style"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_margin="3dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/packNum"
                    android:textColor="#2D4650"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item_nums"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5件/"
                        android:textColor="#2D4650"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tv_item_weights"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200T"
                        android:textColor="#2D4650"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/item_frame"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/customer_blue">

            <ImageView
                android:id="@+id/item_frame_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tv_item_Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="添加照片"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp" />

</RelativeLayout>