<?xml version="1.0" encoding="utf-8"?>
<!--登录按钮效果(登录，扫描等)-->
         <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- pressed 是否点击
            focused 是否获取焦点-->
             <item android:state_pressed="true" android:drawable="@drawable/shape_radius_blue2" />
             <item android:state_focused="true" android:drawable="@drawable/shape_radius_blue2"/>
             <item android:drawable="@drawable/shape_radius_blue" />
         </selector>